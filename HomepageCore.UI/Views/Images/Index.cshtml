    <div class="content">
        <div class="container images">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "row" })) 
            {
                @Html.AntiForgeryToken()
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="image">Choose your picture</label>
                        @Html.TextBoxFor(model => model.Picture, new { type = "file", accept = "image/jpeg", id = "image", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="title">Title</label>
                        @Html.TextBoxFor(model => model.Title, new { id = "title", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="caption">Caption</label>
                        @Html.TextBoxFor(model => model.Caption, new { id = "caption", @class = "form-control" })
                    </div>
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            }
            <ul class="row images__list">
                @foreach(var image in Model.Images)
                {
                    <li class="col-sm-2">
                        <img class="img-thumbnail" src="@(image.Uri)" />
                        <small>@image.Uri</small>
                        <small>@Html.ActionLink("Delete", "Delete", new { id = image.Id })</small>
                    </li>
                }
            </ul>
        </div>
